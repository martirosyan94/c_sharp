<Page x:Class="RegistrationSystemWPF.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RegistrationSystemWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <StackPanel HorizontalAlignment="Left">
        <TextBox Margin="10" Width="100" Text="Name" Name="txtBoxName"></TextBox>
        <TextBox Margin="10" Width="100" Text="Surname" Name="txtBoxSurname"></TextBox>
        <TextBox Margin="10" Width="100" Text="Age" Name="txtBoxAge"></TextBox>
        <TextBox Margin="10" Width="100" Text="Email" Name="txtBoxEmail"></TextBox>
        <TextBox Margin="10" Width="100" Text="Password" Name="txtBoxPassword"></TextBox>
        <ComboBox  Margin="10" Width="100" Text="Password" Name="cbBoxAccountType"></ComboBox>
        <Button Margin="10" Width="100"  Click="ButtonRegister">Register</Button>
        <Button Margin="10" Width="100"  Click="ButtonBack">Back</Button>
        
    </StackPanel>
</Page>
